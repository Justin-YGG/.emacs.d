;; 开启括号自动匹配
(electric-pair-mode 1)
;; 开启括号高亮
(show-paren-mode 1)

;; 关闭工具栏，tool-bar-mode 即为一个 Minor Mode
(tool-bar-mode -1)

;; 关闭文件滑动控件
(scroll-bar-mode -1)

;; 更改光标的样式
(setq-default cursor-type 'bar)
;; 显示行号
(global-linum-mode 1)

;; The value is in 1/10pt, so 100 will give you 10pt, etc.
(set-face-attribute 'default nil :height 135)
(set-default-font "Monaco")

(provide 'init-ui)